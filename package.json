{
  "name": "@sequencemedia/css-purge",
  "version": "1.0.1",
  "description": "A CSS tool written in Node JS as a command line app or library for the purging, burning, reducing, shortening, compressing, cleaning, trimming and formatting of duplicate, extra, excess or bloated CSS.",
  "keywords": [
    "css",
    "css minifier",
    "minifier",
    "purge",
    "stylesheet",
    "duplicate",
    "deduplicate",
    "merge",
    "group",
    "duplicate css",
    "duplicate rules",
    "duplicate properties",
    "clean css",
    "purging css",
    "burning css",
    "reducing css",
    "shortening css",
    "compressing css",
    "cleaning css",
    "trimming css",
    "formatting css",
    "unused css",
    "not used css"
  ],
  "main": "./src/css-purge.mjs",
  "type": "module",
  "author": {
    "name": "Jonathan Perry for Sequence Media Limited",
    "email": "sequencemedia@sequencemedia.net",
    "url": "http://sequencemedia.net"
  },
  "contributors": [
    "Andrew Quan <andrewq@redblueprint.com> (http://redblueprint.com)"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sequencemedia/css-purge.git"
  },
  "homepage": "https://github.com/sequencemedia",
  "bugs": {
    "url": "https://github.com/sequencemedia/css-purge/issues"
  },
  "scripts": {
    "start": "node .",
    "lint": "eslint . --ext .mjs,.cjs",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@adobe/css-tools": "^4.3.1",
    "debug": "^4.3.4",
    "jsdom": "^22.1.0",
    "parse-css-font": "^4.0.0",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/plugin-syntax-import-assertions": "^7.22.5",
    "@babel/preset-env": "^7.22.20",
    "@sequencemedia/hooks": "^1.0.454",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "husky": "^8.0.3"
  },
  "imports": {
    "#css/*": "./src/css/*.mjs",
    "#default-options/*": "./src/default-options/*.json",
    "#utils/errors": "./src/utils/errors/index.mjs",
    "#utils/*": "./src/utils/*.mjs",
    "#css-purge": "./src/css-purge.mjs",
    "#where-am-i": "./where-am-i.mjs"
  },
  "exports": {
    ".": "./src/css-purge.mjs",
    "./stream": "./src/css-purge-stream.mjs"
  }
}
